# Custom button
<CustButton@Button>:
    font_size: 32
    
# Define id so I can refer to the RechnerLayout
# class functions
# Display points to the entry widget
<RechnerLayout>:
    id: calculator
    display: entry
    rows: 5
    padding: 10
    padding: 10
    
    # Where input is displayed
    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
    
    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "8"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "9"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "+"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
    
    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "5"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "6"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "-"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
    
    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "2"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "3"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "*"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
    
    BoxLayout:
        spacing: 10
        CustButton:
            text: "AC"
            on_press: entry.text = ""
            background_color: (1.0, 0.0, 0.0, 1.0)
        CustButton:
            text: "0"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
        CustButton:
            text: "="
            on_press: calculator.calculate(entry.text)
            background_color: (0,0,5,5)
        CustButton:
            text: "/"
            on_press: entry.text += self.text
            background_color: (0,0,1,1)
